package com.layerglue.components{	import fl.controls.Button;	import fl.core.InvalidationType;	import fl.core.UIComponent;		import flash.text.AntiAliasType;	import flash.text.TextFieldAutoSize;		/**	 * 	 */	public class LGIconLabelButton extends LGLabelButton implements ILGComponent	{		public function LGIconLabelButton()		{			super();		}				protected var _iconYOffset:Number = 0;				public function get iconYOffset():Number		{			return _iconYOffset;		}				public function set iconYOffset(value:Number):void		{			if (value == _iconYOffset) return;						_iconYOffset = value;			invalidate();		}				protected var _iconXOffset:Number = 0;				public function get iconXOffset():Number		{			return _iconXOffset;		}				public function set iconXOffset(value:Number):void		{			if (value == _iconXOffset) return;						_iconXOffset = value;			invalidate();		}				override protected function drawLayout():void		{			super.drawLayout();						icon.y += iconYOffset;			icon.x += iconXOffset;		}	}}