package com.layerglue.components{	import fl.controls.ButtonLabelPlacement;
	
	import flash.display.MovieClip;
	import flash.events.Event;
	import flash.geom.Rectangle;		/**	 * 	 */	public class LGIconLabelButton extends LGLabelButton implements ILGComponent	{		public function LGIconLabelButton()		{			super();		}				protected var _iconYOffset:Number = 0;				public function get iconYOffset():Number		{			return _iconYOffset;		}				public function set iconYOffset(value:Number):void		{			if (value == _iconYOffset) return;						_iconYOffset = value;			invalidate();		}				protected var _iconXOffset:Number = 0;				public function get iconXOffset():Number		{			return _iconXOffset;		}				public function set iconXOffset(value:Number):void		{			if (value == _iconXOffset) return;						_iconXOffset = value;			invalidate();		}				override protected function drawLayout():void		{			super.drawLayout();						if (labelPlacement == ButtonLabelPlacement.LEFT)			{				var b:Rectangle = textField.getBounds(this);				icon.x = b.right + iconXOffset;				icon.y = b.top + iconYOffset;				if (background)				{					background.width = icon.getBounds(this).right;				}			}					}				override protected function drawIcon():void		{			super.drawIcon();						var iconMovie:MovieClip = icon as MovieClip;			if (iconMovie)			{				addEventListener(Event.ENTER_FRAME, enterFrameHandler, false, 0, true);				iconMovie.gotoAndStop(0);			}		}				private function enterFrameHandler(event:Event):void		{			var iconMovie:MovieClip = icon as MovieClip;			if (iconMovie)			{				iconMovie.nextFrame();			}		}	}}